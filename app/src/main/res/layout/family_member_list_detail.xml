<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/family_member_list_layout"
    android:orientation="vertical"
    android:layout_margin="@dimen/screen_margin_16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/screen_margin"
        android:id="@+id/family_member_list_name"
        android:textSize="@dimen/list_text_size"
        android:textColor="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/family_list_birthday_label"
            android:layout_marginRight="@dimen/label_margin"
            android:layout_marginEnd="@dimen/label_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/family_member_list_bday"
            android:textColor="@color/colorText"
            android:layout_marginEnd="@dimen/label_margin"
            android:layout_marginRight="@dimen/label_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/family_list_gender_label"
            android:layout_marginRight="@dimen/label_margin"
            android:layout_marginEnd="@dimen/label_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/family_member_list_gender"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

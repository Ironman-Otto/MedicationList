<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lsdinfotech.medicationlist.FamilyMemberActivity"
    tools:showIn="@layout/activity_family_member">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/screen_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Family member -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_member_name"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/family_member_name"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/family_member_name_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Birthday -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_member_birthday"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/family_member_birthday"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/family_member_birthday_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Gender -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_member_gender"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/family_member_gender"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/family_member_gender_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_member_height"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/family_member_height"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/family_member_height_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Weight-->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_member_weight"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/family_member_weight"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/family_member_weight_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Blood type -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/family_member_blood_type"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/family_member_blood_type"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/family_member_blood_type_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>

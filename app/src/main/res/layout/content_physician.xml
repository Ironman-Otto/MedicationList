<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lsdinfotech.medicationlist.PhysicianActivity"
    tools:showIn="@layout/activity_physician">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/screen_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Physician -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/physician_name"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/physician_name"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/physician_name_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Specialty -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/physician_specialty"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/physician_specialty"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/physician_specialy_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/physician_phone"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/physician_phone"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/physician_phone_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- fax -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/fax_physician"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/physician_fax"
                    android:lines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/physician_fax_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/physician_email_label"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/physician_email"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:layout_weight=".9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/physician_email_button"
                    android:background="@drawable/ic_arrow_drop_down_black_24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/down_arrow_margin_left"
                    android:layout_marginStart="@dimen/down_arrow_margin_left"
                    android:layout_marginRight="@dimen/down_arrow_margin_right"
                    android:layout_marginEnd="@dimen/down_arrow_margin_right"
                    android:layout_weight=".1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/address"
                android:padding="@dimen/textview_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/physician_address"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/edittext_textsize"
                        android:layout_weight=".9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/physician_address_button"
                        android:background="@drawable/ic_arrow_drop_down_black_24px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/down_arrow_margin_left"
                        android:layout_marginStart="@dimen/down_arrow_margin_left"
                        android:layout_marginRight="@dimen/down_arrow_margin_right"
                        android:layout_marginEnd="@dimen/down_arrow_margin_right"
                        android:layout_weight=".1"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
                <TextView
                    android:id="@+id/physician_address2"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/edittext_textsize"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/physician_city"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/edittext_textsize"
                        android:layout_marginRight="@dimen/label_margin"
                        android:layout_marginEnd="@dimen/label_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/physician_state"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/edittext_textsize"
                        android:layout_marginRight="@dimen/label_margin"
                        android:layout_marginEnd="@dimen/label_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/physician_zip"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/edittext_textsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/divider_line_2"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

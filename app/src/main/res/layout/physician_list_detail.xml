<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/physician_list_layout"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_margin="@dimen/screen_margin_16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight=".3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="@dimen/physician_list_name_margin"
            android:layout_marginTop="@dimen/physician_list_name_margin"
            android:id="@+id/physician_list_name"
            android:text="@string/place_holder"
            android:textSize="@dimen/list_text_size"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/physician_list_specialty"
            android:textSize="@dimen/physician_list_specialty_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/physician_list_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

   <LinearLayout
       android:id="@+id/physician_list_phone_layout"
       android:gravity="center"
       android:background="@drawable/textview_border"
       android:layout_margin="10dp"
       android:orientation="horizontal"
       android:layout_weight=".7"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/physician_list_phone_btn"
           android:background="@drawable/ic_phone_black_24px"
           android:contentDescription="@string/phone_button"
           android:layout_width="24dp"
           android:layout_height="24dp" />
    </LinearLayout>

</LinearLayout>
